{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*.ts"],
  "spec": {
    "outputDirectory": "./src/docs",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "./src/routes",
    "authenticationModule": "./../building-blocks/jwt/jwt.ts"
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@profile/*": ["profile/*"],
      "@data/*": ["data/*"],
      "@extensions/*": ["extensions/*"],
      "@routes/*": ["routes/*"],
      "@user/*": ["user/*"],
      "@/*": ["*"]
    }
  }
}
